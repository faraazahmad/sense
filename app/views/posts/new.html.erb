<div class="container">
  <br>
  <div class="card small-width">
    <header class="card-header">
      <p class="card-header-title">
        Submit new article
      </p>
    </header>
    <div class="card-content">
      <div class="content">
        <%= form_for @post do |f| %>
          <div class="field">
            <%= f.label :title, class: "label" %>
            <div class="control">
              <%= f.text_field :title, class: "input" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :url, class: "label" %>
            <div class="control">
              <%= f.text_field :url, class: "input" %>
            </div>
          </div>
          
          <div class="field">
            <%= f.label :description, class: "label" %>
            <div class="control">
              <%= f.text_area :description, class: "input" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :tags, class: "label" %>
            <div class="control">
              <%= f.text_field :tags, class: "input" %>
            </div>
          </div>


      </div>
    </div>
    <footer class="card-footer">
      <%= f.submit "Create Post", class: "card-footer-item", method: :create %>

    <% end %>
      <%= link_to "Cancel", article_headlines_path, class: "card-footer-item" %>
    </footer>
  </div>
</div>