<h1 class="title">Headlines</h1>
<div class="container">
<div class="columns">
    <div class="column">
        <% getFive(0).each do |article| %>
            <div class="card">
                <div class="card-image">
                    <figure class="image is-4by3">
                    <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                    </figure>
                </div>
                <div class="card-content">
                    <div class="media">
                        <div class="media-content">
                            <p class="title is-4"><%= link_to article.title, article.url %></p>
                            <p class="subtitle is-6"><%= article.description %>
                        </div>
                    </div>

                    <div class="content">
                        <%= article.name %></p>
                        
                        <time datetime="2016-1-1"><%= time_ago_in_words(article.publishedAt) %> ago</time>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
<% getFive(1).each do |article| %>
    <p><%= article.title %></p>
<% end %>
<% getFive(2).each do |article| %>
    <p><%= article.title %></p>
<% end %>
<% getFive(3).each do |article| %>
    <p><%= article.title %></p>
<% end %>

</div>